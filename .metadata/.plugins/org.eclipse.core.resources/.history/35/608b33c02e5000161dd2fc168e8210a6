jQuery.sap.declare("demo.Component.mybtn");
jQuery.sap.require("sap.m.core.UIComponent");
jQuery.sap.require("sap.m.Button");

sap.ui.core.UIComponent.extend("demo.Component.mybtn", {


    metadata : {
        properties : {
            text: "string"
        }
    }
});
mybtn.createContent =  function(){
	
	this.oButton = new sap.m.Button("idBtn");
	return this.oButton;
}	
mybtn.createContent.setText = function(sText){
	this.oButton.setText(sText);
    this.setProperty("text", sText);
    return this;
	
};